{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Group Go dependencies",
      "matchManagers": ["gomod"],
      "groupName": "go dependencies"
    },
    {
      "description": "Group Docker dependencies",
      "matchManagers": ["dockerfile"],
      "groupName": "docker dependencies"
    },
    {
      "description": "Group Nix flake inputs",
      "matchManagers": ["nix"],
      "groupName": "nix flake inputs"
    },
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "dockerfile": {
    "fileMatch": ["Dockerfile"]
  },
  "gomod": {
    "fileMatch": ["go.mod"]
  },
  "nix": {
    "fileMatch": ["flake.nix"]
  }
}
